{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "outDir": "../dist-server",
        "rootDir": "./src",
        "allowJs": true,
        "strict": true,
        "noEmit": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "../src",
        "../vite.config.ts"
    ]
}